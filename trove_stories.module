/**
 * Implements hook_install().
 */
function trove_stories_install() {

    /***** 
        set default form to "trove_story" which should be installed from the config/optional install ymls
    ****/    
    $selected_form = \Drupal::service('trove_stories.common_services')->getTroveStoriesFormId();
    if (is_null($selected_form)) {
        $config = \Drupal::getContainer()->get('config.factory')->getEditable('trove_stories.settings');
        $config->set('trove_stories_selected_form', 'trove_story');
        $config->save();
    }

    /*** Default values for banner text on gallery page */
    
    $config = \Drupal::configFactory()->getEditable('trove_stories.settings');

    $config->set('trove_stories_gallery_banner_text_heading', 'Explore Trove Stories');
    $config->set('trove_stories_gallery_banner_text_message', "Discover bold stories, share your own spark and explore a world of creativity shaped by people like you! We're inviting you to explore how the community uses one of our favourite online resources.<br><br>Browse our gallery, or feel free to submit your own!");
    $config->save();

    /***** 
        set access permissions for new content types, these are set at:
        admin/structure/types/manage/trove_story_submission/permissions
        admin/structure/types/manage/trove_story_web_story/permissions
        paragraph permissions found at: admin/people/permissions/module/paragraphs_type_permissions
        We do this in the hook_install because the yml config files
        require ALL permissions to be set and we don't want to accidently
        edit or change any current permissions outside the scope of this modules
        content types.
    ****/
    $roles = ['trove_editor', 'trove_author', 'trove_administrator'];

    foreach($roles as $role) {
        /** @var \Drupal\user\RoleInterface $loadedRole */
        $loadedRole = \Drupal::entityTypeManager()->getStorage('user_role')->load($role);

        /** content type trove_story_submission  **/
        $loadedRole->grantPermission('create trove_story_submission content');
        $loadedRole->grantPermission('delete any trove_story_submission content');
        $loadedRole->grantPermission('delete own trove_story_submission content');
        $loadedRole->grantPermission('delete trove_story_submission revisions');
        $loadedRole->grantPermission('edit any trove_story_submission content');
        $loadedRole->grantPermission('edit own trove_story_submission content');
        $loadedRole->grantPermission('revert trove_story_submission revisions');
        $loadedRole->grantPermission('view trove_story_submission revisions');

        /** content type trove_story_web_story  **/
        $loadedRole->grantPermission('create trove_story_web_story content');
        $loadedRole->grantPermission('delete any trove_story_web_story content');
        $loadedRole->grantPermission('delete own trove_story_web_story content');
        $loadedRole->grantPermission('delete trove_story_web_story revisions');
        $loadedRole->grantPermission('edit any trove_story_web_story content');
        $loadedRole->grantPermission('edit own trove_story_web_story content');
        $loadedRole->grantPermission('revert trove_story_web_story revisions');
        $loadedRole->grantPermission('view trove_story_web_story revisions');

        /** paragraph type trove_story_thumbnail  **/
        $loadedRole->grantPermission('create paragraph content trove_story_thumbnail');
        $loadedRole->grantPermission('delete paragraph content trove_story_thumbnail');
        $loadedRole->grantPermission('update paragraph content trove_story_thumbnail');
        $loadedRole->grantPermission('view paragraph content trove_story_thumbnail');

        /** paragraph type trove_story_gallery_images  **/
        $loadedRole->grantPermission('create paragraph content trove_story_gallery_images');
        $loadedRole->grantPermission('delete paragraph content trove_story_gallery_images');
        $loadedRole->grantPermission('update paragraph content trove_story_gallery_images');
        $loadedRole->grantPermission('view paragraph content trove_story_gallery_images');

        /** paragraph type trove_story_hero_image  **/
        $loadedRole->grantPermission('create paragraph content trove_story_hero_image');
        $loadedRole->grantPermission('delete paragraph content trove_story_hero_image');
        $loadedRole->grantPermission('update paragraph content trove_story_hero_image');
        $loadedRole->grantPermission('view paragraph content trove_story_hero_image');
    
        $loadedRole->save();
    }

    //we add some extra specific permissions so ALL ROLES (eg public) can view some paragraph types related to trove stories

    /** @var \Drupal\user\RoleInterface $authRole */
    $authRole = \Drupal::entityTypeManager()->getStorage('user_role')->load('anonymous');
    $authRole->grantPermission('view paragraph content trove_story_gallery_images');
    $authRole->grantPermission('view paragraph content trove_story_thumbnail');
    $authRole->grantPermission('view paragraph content trove_story_hero_image'); 
    $authRole->save();

    /** @var \Drupal\user\RoleInterface $authRole */
    $authRole = \Drupal::entityTypeManager()->getStorage('user_role')->load('authenticated');
    $authRole->grantPermission('view paragraph content trove_story_gallery_images');
    $authRole->grantPermission('view paragraph content trove_story_thumbnail');
    $authRole->grantPermission('view paragraph content trove_story_hero_image');
    $authRole->save();

}




